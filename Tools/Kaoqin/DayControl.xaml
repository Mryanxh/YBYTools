<UserControl x:Class="AlphaYanTools.Kaoqin.DayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlphaYanTools.Kaoqin">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Border BorderThickness="1" Margin="5" BorderBrush="Gray">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Path=Day}" Margin="5" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Vertical" Name="dktime"/>
        </StackPanel>
    </Border>
</UserControl>
