             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AlphaYanTools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="1" BorderBrush="LightGray" Margin="5" PreviewDrop="Border_PreviewDrop" AllowDrop="True" Background="LightGray">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="28" Foreground="White">
                    <Run Text="直接把带图片的PDF文件拖进来"/>
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
